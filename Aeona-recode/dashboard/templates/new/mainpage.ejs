<%- include("../partials/head", { arc, bot, user, path, description, title: "Aeona - Dashboard" , url, image }) %>
<% if (guild.icon) { iconurl="https://cdn.discordapp.com/icons/" + guild.id + "/" + guild.icon
            + ".png??size=512" ; } else {
            iconurl="https://cdn.glitch.com/82fe990a-7942-42e3-9790-39807ccdb9f6%2Ficon-404-dark.png?v=1602427904949" ;
} %>
<%- include("../partials/sidebar", { arc, bot, user, path, description, title: "Aeona - Dashboard" , url, image }) %>
<nav class="text-center">
  <h1>Dashboard for <%=guild.name%> </h1>
  <label for="my-drawer-2" class=" drawer-button lg:hidden float-left">Open Menu</label>
</nav>
<hr class="border-x-gray-300 w-full m-0 mb-10">
<% if(alert) { %>
<div id="alert-1" class="flex p-4 mb-4 bg-blue-100 rounded-lg dark:bg-blue-200 w-full" role="alert">
  <svg class="flex-shrink-0 w-5 h-5 text-blue-700 dark:text-blue-800" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
  </svg>
  <div class="ml-3 text-sm font-medium text-blue-700 dark:text-blue-800">
    <%= alert %>
  </div>
  <button type="button" class="ml-auto -mx-1.5 -my-1.5 bg-blue-100 text-blue-500 rounded-lg focus:ring-2 focus:ring-blue-400 p-1.5 hover:bg-blue-200 inline-flex h-8 w-8 dark:bg-blue-200 dark:text-blue-600 dark:hover:bg-blue-300" data-dismiss-target="#alert-1" aria-label="Close">
    <span class="sr-only">Close</span>
    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
      <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
    </svg>
  </button>
</div>
<% } %>


<img src="<%= iconurl %>" class="max-w-xs rounded-full shadow-2xl animate__animated  animate__infinite animate__pulse animate__slow mx-auto lg:w-96" />
<div class="flex flex-col items-center">
  <h1 class="py-6 text-white transition   ease-in duration-300">
    <%= guild.name %>
  </h1>
</div>
<hr class="border-x-gray-300 w-full m-0 mb-10">
<h3>Main Settings</h3>
<p> Customise Aeona's Main Settings</p>
<hr class="border-x-gray-300 w-full m-0 mb-10">
<form role="form" action="/dashboard/<%= guild.id %>/" method="POST">
    <div class="grid lg:grid-cols-2 gap-4">
    <div>
        <p>Change Aeona's Nickname</p>
        <input type="text" name="nickname" class="!input glass2 text-white" placeholder="Nickname" value="<%= nickname || guild.me.nickname || guild.me.username %>">
    </div>

    <div>
        <p>Change the bot's prefix that triggers the bot.</p>
        <input type="text" name="prefix" class="!input glass2 text-white" placeholder="Prefix" value="<%= settings.prefix %>">
    </div>
    <div>
        <button type="submit" class="!btn !btn-primary">Save Changes</button>
    </div>
    </div>
    
</form>

<hr class="border-x-gray-300 w-full m-0 my-10">
<h1>Data for <%=guild.name%></h1>
<ul>
    <li>
       <h3><%= guild.memberCount %> Members <i class="fa fa-users" style="color: white; font-size: 17px"></i></h3> 
    </li>
    <li>
        <h3><%= guild.channels.cache.size %> Channels <i class="fa fa-hashtag" style="color: white; font-size: 17px"></i> </h3>
    </li>  
    <li>
        <h3><%= guild.roles.cache.size-1 %> Roles <i class="fa fa-tag" style="color: white; font-size: 17px"></i> </h3>
    </li>
    
    <li>
        <% if(settings.isPremium==="true" ) { %>
        <h3>Premium <i class="fa fa-gem" style="color: white; font-size: 17px"></i> </h3>
        <% } else { %>
        <h3>Not Premium <i class="fa fa-gem" style="color: white; font-size: 17px"></i> </h3>
        <% } %>
    </li>

</ul>

<h1>Members Flow <i class ="fa fa-chart-line" style="color: white; font-size: 17px"></i></h1>
<ul>
    <li>
        <%= join1 %> Joins Today. <i class="fa fa-user-plus" style="color: white; font-size: 17px"></i>
    </li>

    <li>
        <%= join2 %> Joins last 7 Day. <i class="fa fa-user-plus" style="color: white; font-size: 17px"></i>
    </li>

    <li>
        <%= leave1 %> Leaves Today. <i class="fa fa-user-times" style="color: white; font-size: 17px"></i>
    </li>

    <li>
        <%= leave2 %> Leaves last 7 Day. <i class="fa fa-user-times" style="color: white; font-size: 17px"></i>
    </li>
</ul>
<%- include("../partials/sidebar-end", { arc, bot, user, path, description, title: "Aeona - Dashboard" , url, image }) %>
<%- include("../partials/footer") %>